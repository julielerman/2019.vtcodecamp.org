
{% for level in sponsors %}

    {% if level.sponsors|length %}

        <div class="section-content">
            <h3>{{level.levelName}}</h3>
        </div>

        <ul class="sponsor-logo-list {{level.levelCode}} section-content section-content-wide ">
        {% for sponsor in level.sponsors %}

            <li>
                {# .sponsor-logo * .sponsor-link is picked up by some ad-blockers  #}
                <a href="{{sponsor.link}}" class="friend-link shape-{{sponsor.shape}}">
                    <img src="assets/sponsor-logos/{{sponsor.logo}}" class="friend-logo" alt="{{sponsor.name}}"/>
                </a>
            </li>

        {% endfor %}
        </ul>

    {% endif %}

{% endfor %}

